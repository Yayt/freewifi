<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#3d3c3e"
    android:orientation="vertical"
    android:textColor="#000000">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:singleLine="false"
        android:text="Privacy Policy"
        android:textColor="#ffffff"
        android:textSize="42px" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4e4d4e"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:padding="30px">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp">

                <TextView
                    android:id="@+id/TEXT_STATUS_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="SourceSansPro"
                    android:text="@string/datacontroller"
                    android:textColor="#ffffff"
                    android:textSize="40px"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/TEXT_STATUS_ID"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/typesofdata"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:paddingTop="10px"
                    android:text="@string/typesofdatatext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/methods"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView3"
                    android:paddingTop="10px"
                    android:text="@string/methodstext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView4"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/place"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView5"
                    android:paddingTop="10px"
                    android:text="@string/placetext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView6"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/retention"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView7"
                    android:paddingTop="10px"
                    android:text="@string/retentiontext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView8"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/collecteddata"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView9"
                    android:paddingTop="10px"
                    android:text="@string/collecteddatatext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView10"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/personaldatainfos"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView11"
                    android:paddingTop="10px"
                    android:text="@string/personaldatatext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView12"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/location"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView13"
                    android:paddingTop="10px"
                    android:text="@string/locationtext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView14"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/ad"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView15"
                    android:paddingTop="10px"
                    android:text="@string/adtext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/TEXT_STATUS_ID2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView16"
                    android:layout_weight="1.0"
                    android:fontFamily="SourceSansPro"
                    android:text="@string/secondtitle"
                    android:textColor="#ffffff"
                    android:textSize="40px"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TEXT_STATUS_ID2"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/legal"
                    android:textColor="#ffffff"
                    android:textSize="36px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView17"
                    android:paddingTop="10px"
                    android:text="@string/legaltext"
                    android:textColor="#ffffff"
                    android:textSize="30px" />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>