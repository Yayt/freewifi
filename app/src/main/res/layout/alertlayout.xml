<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#3d3c3e"
    android:orientation="vertical"
    android:textColor="#000000">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:singleLine="false"
        android:text="Privacy Policy"
        android:textColor="#ffffff"
        android:textSize="42px" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4e4d4e"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:padding="30px"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="300dp" >

                <TextView
                    android:id="@+id/TEXT_STATUS_ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="SourceSansPro"
                    android:text="@string/datacontroller"
                    android:textColor="#ffffff"
                    android:textSize="40px"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45px"
                    android:paddingTop="10px"
                    android:text="@string/typesofdata"
                    android:textColor="#ffffff"
                    android:layout_below="@id/TEXT_STATUS_ID"
                    android:textSize="30px"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10px"
                    android:text="@string/typesofdatatext"
                    android:textColor="#ffffff"
                    android:layout_below="@id/textView"
                    android:textSize="36px" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="45px"
                        android:paddingTop="10px"
                        android:text="@string/methods"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView2"
                        android:textSize="30px"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10px"
                        android:text="@string/methodstext"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView3"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="45px"
                        android:paddingTop="10px"
                        android:text="@string/place"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView4"
                        android:textSize="30px"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10px"
                        android:text="@string/placetext"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView5"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="45px"
                        android:paddingTop="10px"
                        android:text="@string/retention"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView6"
                        android:textSize="30px"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10px"
                        android:text="@string/retentiontext"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView7"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="45px"
                        android:paddingTop="10px"
                        android:text="@string/collecteddata"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView8"
                        android:textSize="30px"
                        android:textStyle="italic" />
                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10px"
                        android:text="@string/collecteddatatext"
                        android:textColor="#ffffff"
                        android:layout_below="@id/textView9"
                        android:textSize="36px" />




                </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>